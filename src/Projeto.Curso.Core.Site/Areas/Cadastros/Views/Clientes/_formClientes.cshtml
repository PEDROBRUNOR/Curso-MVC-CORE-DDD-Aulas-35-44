@model Projeto.Curso.Core.Application.Pedido.ViewModels.ClientesViewModel

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Apelido" class="control-label"></label>
            <input asp-for="Apelido" class="form-control limpa" autocomplete="off"  />
            <span asp-validation-for="Apelido" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-8">
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control limpa" autocomplete="off"  />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>

</div>


<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="CpfCnpj" class="control-label"></label>
            <input asp-for="CpfCnpj" class="form-control limpa" autocomplete="off"  />
            <span asp-validation-for="CpfCnpj" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-8">
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control limpa" autocomplete="off"  />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="Endereco" class="control-label"></label>
            <input asp-for="Endereco" class="form-control limpa" autocomplete="off"  />
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Bairro" class="control-label"></label>
            <input asp-for="Bairro" class="form-control limpa" autocomplete="off"  />
            <span asp-validation-for="Bairro" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Cidade" class="control-label"></label>
            <input asp-for="Cidade" class="form-control limpa" autocomplete="off"  />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-2">
        <div class="form-group">
            <label asp-for="UF" class="control-label"></label>
            <select autocomplete="off" asp-for="UF" asp-items="@ViewBag.ListaEstados" class="form-control"></select>
            <span asp-validation-for="UF" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-2">
        <div class="form-group">
            <label asp-for="CEP" class="control-label"></label>
            <input asp-for="CEP" class="form-control limpa" autocomplete="off"  />
            <span asp-validation-for="CEP" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        <button type="submit" class="btn btn-block btn-success"><i class="glyphicon glyphicon-floppy-disk"></i> Gravar</button>
    </div>

    <div class="col-md-2">
        <a asp-area="Cadastros" onclick="return LigaAguarde()" asp-controller="Clientes" asp-action="Index" class="btn btn-block btn-default"><i class="glyphicon glyphicon-arrow-left"></i> Voltar</a>
    </div>
</div>
